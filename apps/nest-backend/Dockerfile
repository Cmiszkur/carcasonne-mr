# Build the docker image with `npx nx docker-build nest-backend`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nest-backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=2053

WORKDIR /app

RUN addgroup --system nest-backend && \
    adduser --system -G nest-backend nest-backend

COPY dist/apps/nest-backend .
COPY apps/nest-backend/development.env .
COPY apps/nest-backend/production.env .
RUN chown -R nest-backend:nest-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --omit=dev -f install

EXPOSE ${PORT} 2083

CMD ["node", "main.js"]